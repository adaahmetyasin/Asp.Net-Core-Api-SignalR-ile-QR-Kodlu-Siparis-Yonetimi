@model List<ResultMenuTableDto>
@{
    ViewData["Title"] = "Anlık Masa Durumları";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Anlık Masa Durumları Sayfası</h4>
        <div class="row">
            @foreach (var item in Model)
            {
                var color = item.Status ? "card card-stats card-success" : "card card-stats card-danger";
                <div class="col-md-3">
                    <div class="@color">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5">
                                    <div class="icon-big text-center">
                                        <i class="la la-certificate"></i>
                                    </div>
                                </div>
                                <div class="col-7 d-flex align-items-center">
                                    <div class="numbers">
                                        <p class="card-category">@item.Name</p>
                                        <h4 class="card-title">@(item.Status ? "Dolu" : "Boş")</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
