@model UpdateNotificationDto

@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<input type="hidden" asp-for="NotificationId" />
						<div class="card-header">
							<div class="card-title">Bildirim Cüncelleme Sayfası</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Bildirim Türünü Giriniz</label>
								<input type="text" class="form-control" asp-for="Type" id="categoryname">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Bildirim Açıklamasını Giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="categoryname">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Bildirim İkonu Giriniz</label>
								<input type="text" class="form-control" asp-for="Icon" id="categoryname">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Bildirim Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


